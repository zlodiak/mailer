<p id="notice"><%= notice %></p>

<h1>Listing Emails</h1>

<table>
  <thead>
    <tr>
      <th>email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email.email %></td>
        <td><%= link_to 'Show', user_email_path(@user, email) %></td>
        <td><%= link_to 'Edit', edit_user_email_path(@user, email) %></td>
        <td><%= link_to 'Destroy', user_email_path(@user, email), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Email', new_user_email_path(current_user) %>
